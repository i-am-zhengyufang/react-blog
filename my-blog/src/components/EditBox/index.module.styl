
.editBox
    margin-top: 20px
    .commentBox
        display: flex
        .avatar
            width: 50px
            height: 50px
            margin-right: 20px
            img
                width: 100%
                border-radius: 50%
        .rightArea
            .inputRows
                display: flex
                justify-content: space-between
                .inputValue
                    width: 30%
                    text-align: center
                    label
                        justify-content: center//让标签文字居中
            .textarea
                margin: 10px 0
            .commentBtns
                flex-vertical-center(flex-end)
                .commentBtn
                    margin-left: 10px
            .preview
                margin-top: 15px
                position: relative
                padding: 20px
                border: 1.5px solid $themeColor
                .closeBtn
                    position: absolute
                    top: 2px
                    right: 2px
                    cursor: pointer
                &.previewHidden
                    display: none


@media screen and (max-width: 720px) 
    .inputRows
        flex-direction: column
        .inputValue
            display: flex
            width: 100%!important
            :global
                .ant-form-item-label
                    flex: 1
                .ant-form-item-control
                    flex: 2

            
