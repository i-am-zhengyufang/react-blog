

.bottom-line-btn
    position: relative
    &:after
        position: absolute
        bottom: -6px
        left: 0
        width: 0
        height: 3px
        background-color: $secondaryDeepestColor
        content: ''
        -webkit-transition: all 0.3s ease-in-out
        -moz-transition: all 0.3s ease-in-out
        -o-transition: all 0.3s ease-in-out
        -ms-transition: all 0.3s ease-in-out
        transition: all 0.3s ease-in-out
    &:hover 
        &:after
            width: 100%


.show
    opacity: 1 !important//优先级不太够

.hidden
    transform: translate(0, -($navHeight));//注意需要加括号才能生效
.navWrap
    position: fixed
    top: 0
    left: 0
    right: 0
    flex-vertical-center(space-between)
    padding: 0 40px
    height: $navHeight
    bg_color(nav_bgc)
    font_color(nav_color)
    z-index: 999
    // navshow显示有个过渡效果
    transition: all .8s ease
    .navTitle
        font-size: $xxlfontSize
        font-weight: 700
        cursor: pointer
    .webNav
        display: flex
        justify-content: space-around
        align-items: center
        .icon
            vertical-align: middle
        .navItem
            @extend .bottom-line-btn
            cursor: pointer
            padding: 0 10px 
            span
                margin-left: 5px
                //覆盖navLink自带颜色
                font_color(nav_color)
                font-weight: 700
        .dropdownNav
            position: relative
            cursor: pointer
            .dropdownNavList
                opacity: 0
                position: absolute
                border-radius: 10px
                left: 0
                right: 0
                top: 25px
                transition: all 0.6s ease-in-out;
                // dropdown-nav-list里面还有包裹一层dropdown-nav-content的原因是因为我希望菜单和文章保持间隙，
                // 同时不会出现移动到菜单内容则菜单消失的情况
                .dropdownNavContent
                    margin-top: 10px
                    border-radius: 10px
                    overflow: hidden
                    bg_color(main_bgc)
                    a
                        display: inline-block
                        font_color(nav_color)
                        width: 100%
                        font-weight: 700
                        line-height-center(35px)
                        .icon
                            vertical-align: middle
                        &:hover
                            background-color: $themeColor
                    
.mobileNav
    display: none
    height: 55px
    position: fixed
    top: 0
    left: 0
    right: 0
    z-index: 999
    bg_color(mobile_nav_bgc)
    font_color(nav_color)
    transition: all .8s ease
    .icon
        width: 35px
        height: 35px
        my_fill(nav_color)
    .mobileNavTitle
        font-size: $mobileNavTitleSize

@media screen and (max-width: 1028px) 
  .navWrap
    display: none
  .mobileNav
    display: flex
    padding: 0 10px
    justify-content: space-between
    align-items: center